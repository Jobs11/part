<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.part.mapper.CategoryMapper">

    <!-- ✅ ResultMap -->
    <resultMap id="categoryResultMap" type="com.example.part.dto.CategoryDTO">
        <id property="categoryId" column="category_id"/>
        <result property="categoryName" column="category_name"/>
        <result property="description" column="description"/>
        <result property="isActive" column="is_active"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- ✅ 전체 카테고리 조회 -->
    <select id="selectAllCategories" resultMap="categoryResultMap">
        SELECT *
        FROM category
        WHERE is_active = 1
        AND description = '카테고리'
        ORDER BY category_name ASC
    </select>

    <!-- ✅ 관리용 전체 카테고리 조회 (필터 없음) -->
    <select id="selectAllCategoriesForManagement" resultMap="categoryResultMap">
        SELECT *
        FROM category
        ORDER BY category_id ASC
    </select>

    <!-- ✅ 단일 카테고리 조회 -->
    <select id="findById" resultMap="categoryResultMap" parameterType="int">
        SELECT *
        FROM category
        WHERE category_id = #{categoryId}
    </select>

    <!-- 카테고리 코드로 조회 - 제거됨 (더 이상 사용하지 않음) -->

    <!-- ✅ 카테고리 이름으로 조회 -->
    <select id="findByName" resultMap="categoryResultMap" parameterType="string">
        SELECT *
        FROM category
        WHERE category_name = #{categoryName}
        AND is_active = 1
    </select>

    <!-- description �??�른 카테고리 조회 -->
    <select id="findByDescription" resultMap="categoryResultMap" parameterType="string">
        SELECT *
        FROM category
        WHERE description = #{description}
        AND is_active = 1
        ORDER BY category_name ASC
    </select>

    <!-- 카테고리 이름과 설명으로 조회 (중복 체크용) -->
    <select id="findByNameAndDescription" resultMap="categoryResultMap">
        SELECT *
        FROM category
        WHERE category_name = #{categoryName}
        AND description = #{description}
    </select>

    <!-- ✅ 카테고리 등록 -->
    <insert id="insertCategory" parameterType="com.example.part.dto.CategoryDTO">
        INSERT INTO category (
            category_name,
            description
        ) VALUES (
            #{categoryName},
            #{description}
        )
    </insert>

    <!-- ✅ 카테고리 정보 수정 -->
    <update id="updateCategory" parameterType="com.example.part.dto.CategoryDTO">
        UPDATE category
        SET
            category_name = #{categoryName},
            description = #{description},
            is_active = #{isActive}
        WHERE category_id = #{categoryId}
    </update>

    <!-- last_number 관련 쿼리 제거됨 - 부품번호가 더 이상 카테고리별로 생성되지 않음 -->

    <!-- ✅ 카테고리 비활성화 -->
    <update id="deactivateCategory" parameterType="int">
        UPDATE category
        SET is_active = 0
        WHERE category_id = #{categoryId}
    </update>

    <!-- ✅ 카테고리 삭제 -->
    <delete id="deleteCategory" parameterType="int">
        DELETE FROM category
        WHERE category_id = #{categoryId}
    </delete>

</mapper>
